{
  "name": "@mochify/driver-playwright",
  "version": "0.2.0",
  "description": "Playwright driver for Mochify",
  "homepage": "https://github.com/mantoni/mochify.js",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "types": "tsc",
    "test": "echo \"No unit tests yet\"",
    "test:integration": "echo \"No integration tests yet\"",
    "prettier:check": "prettier --check '**/*.{js,json,md}'",
    "build": "tsc --project tsconfig.pack.json",
    "clean": "rimraf --glob '!(node_modules)/**/*.d.ts' '*.d.ts'",
    "prepack": "npm run build",
    "postpack": "npm run clean",
    "preversion": "npm run lint && npm run prettier:check && tsc && npm test && npm run test:integration",
    "version": "changes --commits --footer --workspace",
    "postversion": "git push --follow-tags && npm publish"
  },
  "keywords": [
    "mocha",
    "chromium",
    "firefox",
    "safari",
    "headless",
    "testing"
  ],
  "author": "Maximilian Antoni <mail@maxantoni.de> (http://maxantoni.de)",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.1"
  },
  "peerDependencies": {
    "@mochify/mochify": "^0.1.0 || ^0.2.0 || ^0.3.0"
  },
  "files": [
    "index.html",
    "**/*.js",
    "**/*.d.ts",
    "!**/*.test.js",
    "!test/**",
    "!.*"
  ],
  "engines": {
    "node": ">=16"
  }
}
